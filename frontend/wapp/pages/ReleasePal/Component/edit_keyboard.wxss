/* pages/ReleasePal/Component/edit_keyboard.wxss */

.editor {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;

  }
  .editor-show{
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);

  }
  .editor-none{
    z-index: -1;

  }
  .editor .editor-wraper {
    z-index: 100;
    position: absolute;
    bottom: 0;
    background: #fff;
    width: 100%;
    transition: transform .4s;
    height: 30%;
    border-top-left-radius:10px;
    border-top-right-radius: 10px;
  }
  .editor .editor-wraper-none{
    transform: translateY(100%);

  }
  .editor .editor-wraper-show{
    transform: translateY(0);

  }

  .editor .header {
    width: 100px;
    background: #86baa3;
    height: 80rpx;
    color: #fff;
    display: flex;
    opacity: 1;

  }
  
  .editor .header .close {
    position: absolute;
    left: 0;
    top: 0;
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-weight: 500;
    font-size: 32rpx;
    background: transparent;
    border: none;
    outline: none;

  }

  .tag {
      width: 600px;
      color: brown;
  }

  .tag_input{
      margin-top: 10%;
      height: 50px;
      text-align: center;
  }
  .pic{
    width: 20px;
    height: 20px;
    opacity: 0.8;
    float: right;
    margin-top: 5px;
    margin-right: 5px;
  }
  .button-bottom{
    margin-top: 15%;
  }